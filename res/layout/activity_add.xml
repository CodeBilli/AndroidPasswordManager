<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="codebilli.passwordmanager.AddActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/siteName"
        android:background="@drawable/back"
        android:hint="Enter Site Name"
        android:height="40dp"
        android:textSize="20sp"
        android:width="200dp"
        android:layout_marginTop="57dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/accNo"
        android:layout_alignStart="@+id/accNo"
        android:paddingLeft="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userId"
        android:background="@drawable/back"
        android:hint="Enter UserId"
        android:height="40dp"
        android:textSize="20sp"
        android:width="200dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/siteName"
        android:layout_alignLeft="@+id/siteName"
        android:layout_alignStart="@+id/siteName"
        android:layout_alignRight="@+id/siteName"
        android:layout_alignEnd="@+id/siteName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="40dp"
        android:textSize="20sp"
        android:width="200dp"
        android:paddingLeft="10dp"
        android:id="@+id/password"
        android:background="@drawable/back"
        android:hint="Enter Password"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/userId"
        android:layout_alignLeft="@+id/userId"
        android:layout_alignStart="@+id/userId"
        android:password="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accNo"
        android:background="@drawable/back"
        android:hint="Enter Account No"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/password"
        android:height="40dp"
        android:textSize="20sp"
        android:width="200dp"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:id="@+id/addDetails"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</RelativeLayout>
